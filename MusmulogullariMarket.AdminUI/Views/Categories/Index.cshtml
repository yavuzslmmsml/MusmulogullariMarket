@model MusmulogullariMarket.AdminUI.ViewModels.Categories.CategoriesPageViewModel


<div class="card">
    <!--begin::Card header-->
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <h2 class="fw-bold">Kategoriler</h2>
        </div>

        <div class="card-toolbar">
            <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_category">
                <i class="ki-duotone ki-plus fs-2"></i>
                Kategori Ekle
            </a>
        </div>
    </div>
    <!--end::Card header-->

    <!--begin::Card body-->
    <div class="card-body pt-0">

        <table class="table align-middle table-row-dashed fs-6 gy-5">
            <thead>
                <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                    <th>Kategori AdÄ±</th>
                    <th class="text-end">Aksiyon</th>
                </tr>
            </thead>

            <tbody class="fw-semibold text-gray-600">
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>
                            <span class="fw-bold">@item.Name</span>
                        </td>

                        <td class="text-end">
                            <a href="#"
                                class="btn btn-sm btn-light me-2"
                                data-bs-toggle="modal"
                                data-bs-target="#kt_modal_update_category"
                                onclick="fillUpdateCategory('@item.Id','@item.Name')">
                                    Edit
                                </a>

                            <a href="#"
                            class="btn btn-sm btn-light-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#kt_modal_delete_category"
                            onclick="setDeleteCategory('@item.Id')">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <!--end::Card body-->
</div>
<!--begin::Add Category Modal-->
<div class="modal fade" id="kt_modal_add_category" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h2 class="fw-bold">Kategori Ekle</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1"></i>
                </div>
            </div>

            <div class="modal-body">
                <form asp-controller="Categories"
      asp-action="Create"
      method="post">

    @Html.AntiForgeryToken()

    <div class="mb-5">
        <label class="required fw-semibold fs-6 mb-2">Kategori AdÄ±</label>
        <input type="text"
               name="Name"     
               class="form-control form-control-solid" />
    </div>

    <div class="text-end">
        <button type="button"
                class="btn btn-light me-3"
                data-bs-dismiss="modal">
            Ä°ptal
        </button>

        <button type="submit" class="btn btn-primary">
            Kaydet
        </button>
    </div>
</form>

            </div>

        </div>
    </div>
</div>
<!--end::Add Category Modal-->

<!--begin::Update Category Modal-->
<div class="modal fade" id="kt_modal_update_category" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h2 class="fw-bold">Kategori Edit</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1"></i>
                </div>
            </div>

            <div class="modal-body">
                <form asp-controller="Categories"
      asp-action="Update"
      method="post">

    @Html.AntiForgeryToken()

    <input type="hidden"
           name="Id"
           id="updateCategoryId" />

    <div class="mb-5">
        <label class="required fw-semibold fs-6 mb-2">Kategori AdÄ±</label>
        <input type="text"name="Name"
               id="updateCategoryName"
               class="form-control form-control-solid" />
    </div>

    <div class="text-end">
        <button type="button"
                class="btn btn-light me-3"
                data-bs-dismiss="modal">
            Ä°ptal
        </button>

        <button type="submit" class="btn btn-primary">
            DeÄŸiÅŸikliÄŸi Kaydet
        </button>
    </div>
</form>
            </div>

        </div>
    </div>
</div>

<!--end::Update Category Modal-->

<!--begin::Delete Category Modal-->
<div class="modal fade" id="kt_modal_delete_category" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h2 class="fw-bold text-danger">Kategori Silme</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1"></i>
                </div>
            </div>

            <div class="modal-body">
                <p>Ã–nemli UyarÄ±, Bu kategoriyi silmek istiyor musun?</p>

                <form asp-controller="Categories"
                      asp-action="Delete"
                      method="post">

                    @Html.AntiForgeryToken()

                    <!-- ðŸ”¥ BURASI Ã‡OK Ã–NEMLÄ° -->
                    <input type="hidden"
                           id="deleteCategoryId"
                           name="id" />

                    <div class="text-end">
                        <button type="button"
                                class="btn btn-light me-3"
                                data-bs-dismiss="modal">
                            Ä°ptal
                        </button>

                        <button type="submit" class="btn btn-danger">
                            Evet, Sil
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<!--end::Delete Category Modal-->

<script>
      function fillUpdateCategory(id, name) {
        document.getElementById('updateCategoryId').value = id;
        document.getElementById('updateCategoryName').value = name;
    }

    function setDeleteCategory(id) {
        document.getElementById('deleteCategoryId').value = id;
    }
</script>
